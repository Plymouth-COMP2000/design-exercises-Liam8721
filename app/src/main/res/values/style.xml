<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Button Style -->
    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/red_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Custom TextView Style -->
    <style name="MyTextViewStyle" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>