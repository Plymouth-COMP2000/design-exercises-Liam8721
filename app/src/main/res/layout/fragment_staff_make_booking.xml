<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StaffMakeBooking">

    <TextView
        android:id="@+id/StaffMakeBookingTitle"
        style="@style/TitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Booking"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/StaffMakeBookingBackIC"
        app:layout_constraintEnd_toStartOf="@+id/StaffMakeBookingMenuIC"
        app:layout_constraintStart_toEndOf="@+id/StaffMakeBookingBackIC"
        app:layout_constraintTop_toTopOf="@+id/StaffMakeBookingMenuIC" />

    <View
        android:id="@+id/StaffMakeBookingDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/red_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingTitle" />

    <ImageButton
        android:id="@+id/StaffMakeBookingBackIC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/StaffMakeBookingMenuIC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/StaffMakeBookingScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingDivider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/StaffMakeBookingDropdownLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/StaffMakeBookingDropdownLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Guest Information"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/StaffMakeBookingGuestEmail"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="16dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="center_vertical|start"
                android:hint="Guest Email"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingDropdownLabel" />

            <EditText
                android:id="@+id/StaffMakeBookingGuestUsername"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:autofillHints="username"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="center_vertical|start"
                android:hint="Guest Username"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingGuestEmail" />

            <EditText
                android:id="@+id/StaffMakeBookingGuestName"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:autofillHints="name"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="center_vertical|start"
                android:hint="Guest Name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingGuestUsername" />

            <TextView
                android:id="@+id/StaffMakeBookingDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Booking Details"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingGuestName" />

            <Spinner
                android:id="@+id/StaffMakeBookingPartySize"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingDetailsLabel" />

            <Spinner
                android:id="@+id/StaffMakeBookingDate"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toStartOf="@+id/StaffMakeBookingTime"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingPartySize" />

            <Spinner
                android:id="@+id/StaffMakeBookingTime"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/StaffMakeBookingDate"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingPartySize" />

            <Button
                android:id="@+id/StaffMakeBookingCreateButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Create Booking"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingDate" />

            <TextView
                android:id="@+id/StaffMakeBookingNotesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Additional Notes"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingCreateButton" />

            <EditText
                android:id="@+id/StaffMakeBookingNotes"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="8dp"
                android:autofillHints="text"
                android:background="@drawable/guest_make_booking_spinner_background"
                android:gravity="top|start"
                android:hint="e.g., Dietary requirements, allergies, special requests..."
                android:inputType="textMultiLine"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StaffMakeBookingNotesLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

