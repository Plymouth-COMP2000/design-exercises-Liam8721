<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestMakeBooking">

    <!-- Party Size Spinner -->
    <TextView
        android:id="@+id/GuestMakeBookingTitle"
        style="@style/TitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Make a Booking"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/GuestMakeBookingBackIC"
        app:layout_constraintEnd_toStartOf="@+id/GuestMakeBookingMenuIC"
        app:layout_constraintStart_toEndOf="@+id/GuestMakeBookingBackIC"
        app:layout_constraintTop_toTopOf="@+id/GuestMakeBookingMenuIC" />

    <View
        android:id="@+id/GuestMakeBookingdivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/red_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingTitle" />

    <ImageButton
        android:id="@+id/GuestMakeBookingBackIC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/GuestMakeBookingMenuIC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/GuestMakeBookingScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingdivider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/GuestMakeBookingDropdownLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:paddingBottom="20dp">

        <TextView
            android:id="@+id/GuestMakeBookingDropdownLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="New Booking"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/GuestMakeBookingPartySize"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/guest_make_booking_spinner_background"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/GuestMakeBookingTime"
            app:layout_constraintStart_toStartOf="@+id/GuestMakeBookingDate"
            app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingDropdownLabel" />

        <Spinner
            android:id="@+id/GuestMakeBookingDate"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/guest_make_booking_spinner_background"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/GuestMakeBookingTime"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingPartySize" />

        <Spinner
            android:id="@+id/GuestMakeBookingTime"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/guest_make_booking_spinner_background"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/GuestMakeBookingDate"
            app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingPartySize" />

        <Button
            android:id="@+id/GuestMakeBookingSearchButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/GuestMakeBookingTime"
            app:layout_constraintStart_toStartOf="@+id/GuestMakeBookingDate"
            app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingDate"
            tools:text="Search" />

        <TextView
            android:id="@+id/GuestMakeBookingNotesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Additional Notes"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/GuestMakeBookingDate"
            app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingSearchButton" />

        <EditText
            android:id="@+id/GuestMakeBookingNotes"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:autofillHints="text"
            android:background="@drawable/guest_make_booking_spinner_background"
            android:gravity="top|start"
            android:hint="e.g., Dietary requirements, allergies, special requests..."
            android:inputType="textMultiLine"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@+id/GuestMakeBookingTime"
            app:layout_constraintStart_toStartOf="@+id/GuestMakeBookingDate"
            app:layout_constraintTop_toBottomOf="@+id/GuestMakeBookingNotesLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>