<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Yellow background -->
    <solid android:color="@color/yellow_light" />

    <!-- Red border -->
    <stroke
        android:width="2dp"
        android:color="@color/red_primary" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
